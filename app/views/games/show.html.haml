.post
  %h2.tekst
    = @game.name
    %br/
    - unless @game.product.pictures.blank?
      - for picture in @game.product.pictures
        = link_to image_tag(picture.photo.url(:small), :alt => @game.name), picture.photo.url(:large), :rel => "prettyPhoto[pp_gal]" 
  %p.tekst
    wydawca: 
    = link_to @game.publisher_game.name, publisher_game_path(@publisher_game) 
    %br/
    gatunek gry: #{@game.game_type}
    %br/
    język wydania: #{@game.language}
    %br/
    instrukcja: #{@game.instruction}
    %br/
    wiek graczy od #{@game.age_of_players_from}
    %br/
    liczba graczy:
    - unless (@game.number_of_players.blank?)
      = @game.number_of_players
    - if (@game.number_of_players.blank?)    
      od #{@game.number_of_players_from} do #{@game.number_of_players_to}
    %br/
    - unless (@game.game_time.blank?)
      czas gry: ok. #{@game.game_time} minut
      %br/
    - if (@game.game_time.blank?)
      - unless (@game.game_time_from.blank?)
        czas gry: od #{@game.game_time_from} do #{@game.game_time_to} minut 
        %br/
    cena: #{number_to_currency(@game.price)} 
  .tekst 
    = button_to "Dodaj do koszyka", order_items_path(product_id: @game.product.id), remote: true
  %p.tekst
    = @game.description.html_safe
    %br/
%p
= link_to "Pokaż wszystkie gry", games_path
