.post
  %h2.tekst-1strona
    = @game.name
    %br
    - unless @game.product.pictures.blank?
      = image_tag @game.product.pictures.first.photo.url(:small)
      %br
    Cena : 
    = @game.price
    zł
    %br
    Gatunek gry : 
    = @game.game_type
    %br
    Wydawca : 
    = link_to @game.publisher_game.name, publisher_game_path(@publisher_game) 
    %br
    Język wydania : 
    = @game.language
    %br
    Wiek graczy od 
    = @game.age_of_players_from
    %br
    Liczba graczy:
    - unless (@game.number_of_players.blank?)
      = @game.number_of_players
    - if (@game.number_of_players.blank?)    
      od 
      = @game.number_of_players_from
      do 
      = @game.number_of_players_to
    %br
    Instrukcja:
    = @game.instruction
    %br
    - unless (@game.game_time.blank?)
      Czas gry: ok.
      = @game.game_time
      minut
    - if (@game.game_time.blank?)
      Czas gry: od 
      = @game.game_time_from
      do
      = @game.game_time_to
      minut    
    Opis : 
    = @game.description
    %br
%p
= link_to "Pokaż wszystkie gry", games_path
