%h3.title Podkategorie:
- for subcategory_book in @category_book.subcategory_books 
  %h2.title
    = link_to "#{subcategory_book.name} (#{subcategory_book.books.length})", subcategory_book_path(subcategory_book)
%h3.title Książki:
- for book in @books 
  .post
  %h2.title
    = link_to book.title, book_path(book)
    - unless book.product.pictures.blank?
      %br/
      = image_tag book.product.pictures.first.photo.url(:thumb)
    %p.tekst-1strona
      Autor: #{book.author}
      %br/
      Wydawnictwo:
      = link_to book.publisher_book.name, publisher_book_path(book.publisher_book_id) 
      %br/
      Rok wydania: #{book.year_of_publishing} 
      %br/
      Rodzaj oprawy:  #{book.cover}
      %br/
      Cena: #{number_to_currency(book.price)} 
%br/
%br/
= paginate @books
