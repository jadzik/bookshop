- for game in @games 
  .tekst
  %h2.tekst
    = link_to game.name, game_path(game)
    - unless game.product.pictures.blank?
      %br/
      = link_to image_tag(game.product.pictures.first.photo.url(:small)), game.product.pictures.first.photo.url(:large), :rel => "prettyPhoto[pp_gal]" 
    %p.tekst
      gatunek gry: #{game.game_type}
      %br/
      opis: #{truncate(game.description, :length => 20, :separator => ' ', :ommission => "...")}
      %br/
      cena: #{number_to_currency(game.price)}
    .tekst
      = button_to("Dodaj do koszyka", add_to_cart_product_order_item_order_path( game.product.id, 1, 1), :action => "add_to_cart", :method => :get)
%br/
.tekst
  = paginate @games
