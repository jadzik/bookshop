%ul{:style=> 'list-style-type: none'}
        = link_to_unless_current("Nowości", new_products_path)
        %li.menu.show
          = link_to "", "#", :class => "expander open"
          = link_to_unless_current( "Książki", books_path)
          %ul
            %li.submenu.show
              = link_to "", "#", :class => "expander"
              = link_to_unless_current( "Kategorie", category_books_path)
              %ul.hide
                -for category_book in CategoryBook.all
                  %li.submenu
                    - if category_book.subcategory_books.blank?
                      = link_to "", "#", :class => "expander open"
                    - else
                      = link_to "", "#", :class => "expander"
                    = link_to_unless_current( "#{category_book.name} (#{category_book.books.length})", category_book_path(category_book))
                    %ul.hide
                      -for subcategory_book in category_book.subcategory_books
                        %li.submenu2
                          = link_to_unless_current( "#{subcategory_book.name} (#{subcategory_book.books.length})", subcategory_book_path(subcategory_book))
            %li.submenu.show
              = link_to "", "#", :class => "expander"
              = link_to_unless_current( "Wydawnictwa", publisher_books_path)
              %ul.hide
                - for publisher_book in PublisherBook.all
                  %li.submenu2
                    = link_to_unless_current( "#{publisher_book.name} (#{publisher_book.books.length})", publisher_book_path(publisher_book))
        %li.menu.show
          = link_to "", "#", :class => "expander"
          = link_to_unless_current( "Gry", games_path)
          %ul.hide
            - for  category_game in CategoryGame.all
              %li.submenu
                - if category_game.subcategory_games.blank?
                  = link_to "", "#", :class => "expander open"
                - else
                  = link_to "", "#", :class => "expander"
                = link_to_unless_current( "#{category_game.name} (#{category_game.games.length})", category_game_path(category_game))
                %ul.hide
                  -for subcategory_game in category_game.subcategory_games
                    %li.submenu2
                      = link_to_unless_current( "#{subcategory_game.name} (#{subcategory_game.games.length})", subcategory_game_path(subcategory_game))
        %li.menu.show
          = link_to "", "#", :class => "expander"
          = link_to_unless_current( "Akcesoria", accessories_path)
          %ul.hide
            - for category_accessory in CategoryAccessory.all
              %li.submenu2
                = link_to_unless_current( "#{category_accessory.name} (#{category_accessory.accessories.length})", category_accessory_path(category_accessory))
